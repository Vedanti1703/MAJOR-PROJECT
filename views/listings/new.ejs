<% layout("/layouts/boilerplate") %>
<div class="row mt-3">
    <div class="col-8 offset-2" >
        <br><br>
    <h2>Create a new Listing</h2>
    <form method="post"  action="/listings" novalidate class="needs-validation">
       <div class="mb-3">
            <label for="title" class="form-label">Title</label>
            <input type="text" placeholder="add a catchy  title" name="listing[title]"  class="form-control" required/>
            <div class="valid-feedback">Title looks good</div>
        </div>
<br>
<div class="mb-3">
    <label for="description" class="form-label">Description</label>
    <textarea name="listing[description]" class="form-control" required></textarea>
    <div class="invalid-feedback">Please enter description</div>
</div>
<br>
<div class="mb-3">
    <label for="location" class="form-label">Location</label>
    <input type="text" name="listing[location]" placeholder="Jaipur"  class="form-control" required/>
    <div class="invalid-feedback">Please enter location</div>
</div>
<br>
<div class="row">
    <div class="mb-3 col-md-4">
        <label for="price" class="form-label">price</label>
        <input name="listing[price]"  placeholder="1000" class="form-control" required/>
        <div class="invalid-feedback">Please enter price</div>
    </div>
    <br><br>
    <div class="mb-3 col-md-8">
        <label for="country" class="form-label">Country</label>
        <input type="text" name="listing[country]" placeholder="India" class="form-control" required/>
        <div class="invalid-feedback">Please enter country name</div>
    </div>
    <br><br>
</div>

<div class="mb-3">
    <label for="image" class="form-label">Image</label>
    <input type="text" name="listing[image]"  placeholder="enter image url" class="form-control"/>
</div>
<br><br>

<button class="btn btn-dark add-btn mt-3">Add new listing</button>
<br><br>
    </form>
</div>
</div>
<script src="/js/script.js"></script>